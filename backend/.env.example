# =================================
# EgyptAir Backend Configuration
# =================================

# Server
APP_NAME=EgyptAir Feedback API
APP_VERSION=1.0.0
DEBUG=True
API_PREFIX=/api/v1

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/egyptair_db

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:3001

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads

# Sentiment Analysis Model
USE_GPU=False
MODEL_NAME=aubmindlab/bert-base-arabertv02
